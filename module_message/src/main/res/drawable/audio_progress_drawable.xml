<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

<!-- 背景  gradient是渐变,corners定义的是圆角 -->
<item android:id="@android:id/background">
    <shape>
        <gradient
            android:angle="45"
            android:endColor="#FFCEDCFF"
            android:startColor="#FFCCEDFF" />
    </shape>
</item>
<!-- 进度条 -->
<item android:id="@android:id/progress">
    <clip>
        <shape>
            <gradient
                android:angle="45"
                android:endColor="#FF5C8CFF"
                android:startColor="#FF54C3FF" />
        </shape>
    </clip>
</item>

</layer-list>