<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:id="@+id/super_msg_layout"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/free_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginTop="39dp"
        android:includeFontPadding="false"
        android:text="@string/welcome_to_use_free_msg"
        android:textColor="@color/color_FF2A2A2A"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/image_bg"
        android:layout_width="321dp"
        android:layout_height="321dp"
        android:layout_below="@+id/free_message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:src="@drawable/cc_chat_sms_bg" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/free_message"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="75dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/group_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/use_free_msg"
