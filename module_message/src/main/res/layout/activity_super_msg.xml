        <ImageView
            android:layout_width="201dp"
            android:layout_height="178dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="26dp"
            android:src="@drawable/cc_chat_sms_pic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="9dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tip2"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="@string/you_can"
                android:textColor="#FF000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_tip3"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="@string/send_free_msg"
                android:textColor="#0D6CF9"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginLeft="9dp"
            android:text="@string/send_others_msg_no_free"
            android:textColor="#FF000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_tip_more"
            android:layout_width="320dp"
            android:layout_height="22dp"
            android:layout_marginLeft="9dp"
            android:text="@string/send_others_msg_no_free2"
            android:textColor="#FF000000"
            android:textSize="16sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_tip_newone"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginLeft="8dp"
            android:text="@string/send_others_msg_no_free"
            android:textColor="#FF000000"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancle_btn"
            android:layout_width="150dp"
            android:layout_height="51dp"
            android:background="@drawable/btn_sms_sure_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/talk_later_btn"
            android:textColor="#FF157CF8"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sure_btn"
            android:layout_width="150dp"
            android:layout_height="51dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_sms_cancle_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/sure"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp" />
    </LinearLayout>
