<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/group_mass_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginTop="15dp"
        android:includeFontPadding="false"
        android:text="@string/welcome_to_use_group_mass"
        android:textColor="@color/color_FF2A2A2A"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/image_bg"
        android:layout_width="match_parent"
        android:layout_height="239dp"
        android:layout_below="@+id/group_mass_title"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/cc_chat_group_mass_bg" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_mass_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/group_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/use_group_mass"
            android:layout_marginLeft="44dp"
            android:textColor="@color/color_FFFFFFFF"
            android:textSize="24sp" />

        <ImageView
            android:layout_width="171dp"
            android:layout_height="152dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/cc_chat_sms_pic_small" />

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="26dp"
            android:layout_marginTop="28dp"
            tools:text="@string/group_mass_tip"
            android:textColor="@color/color_2a2a2a"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/group_mass_notify"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel_btn"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_sms_sure_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/talk_later_btn"
            android:textColor="#FF157CF8"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/confirm_btn"
            android:layout_width="150dp"
            android:layout_height="51dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_sms_cancle_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/sure"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/group_mass_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:drawablePadding="3dp"
        android:textColor="#0c6cf9"
        android:drawableRight="@drawable/cc_chat_sms_openicon"
        android:text="@string/group_mass_notify"/>

</RelativeLayout>