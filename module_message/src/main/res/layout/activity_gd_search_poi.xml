<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relativeLayout01"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="54dp"
        >
        <LinearLayout
            android:id="@+id/iv_back01"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="11.2dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/common_back_selector" />
        </LinearLayout>

        <EditText
            android:id="@+id/edit_query01"
            android:layout_toRightOf="@id/iv_back01"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="12dp"
            android:paddingRight="36dp"
            android:layout_centerVertical="true"
            android:textCursorDrawable="@drawable/contact_editcursor"
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/color_2a2a2a"
            android:textColorHint="@color/color_text_hint"
            android:background="@drawable/contact_list_search"
            android:maxLines="1"
            android:singleLine="true"
            android:hint="@string/search"
            android:imeOptions="actionSearch"
            />
        <ImageView
            android:id="@+id/iv_delect01"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="32dp"
            android:background="@drawable/contact_search_delect_btn_selector"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:background="@color/white"
        android:id="@+id/location_poi_list"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:listSelector="#00000000"
        android:layout_below="@+id/map_info_layout"
        android:overScrollMode="never"
        android:visibility="visible"
        android:scrollbars="none" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="180dp"
        android:text="@string/search_loction_not_result"
        android:textSize="14sp"
        android:includeFontPadding="false"
        android:textColor="#A1A1A1"
        android:visibility="gone"
        android:id = "@+id/not_search_result"
        />
</LinearLayout>