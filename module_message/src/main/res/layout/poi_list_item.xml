<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/contact_item_selector"
    android:id = "@+id/poi_list_item_root_view"
    android:layout_height="68dp">
    <TextView
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="14dp"
        android:includeFontPadding="false"
        android:id = "@+id/poi_list_item_title"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginLeft="20dp"
        android:textColor="#FF404040"
        />

    <TextView
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/poi_list_item_title"
        android:id = "@+id/poi_list_item_detail"
        android:textSize="14sp"
        android:includeFontPadding="false"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="#FFA1A1A1"
        android:layout_marginLeft="20dp"

        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:src = "@drawable/cc_chat_map_list_blue"
        android:id = "@+id/poi_list_item_select"
        android:visibility="gone"
        />
    <View
        android:layout_width="335dp"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_alignParentBottom="true"
        android:background="#FFF3F3F3"/>
</RelativeLayout>
